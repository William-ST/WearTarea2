<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/escudo_upv_cuadrado">
    <!--  https://developer.android.com/training/wearables/ui/layouts se le ha subido el padding -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:boxedEdges="left|right|bottom"
        tools:ignore="MissingPrefix">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e4c8c8c8"
            android:gravity="center"
            android:text="Â¿Dar por finalizada la partida?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark_blue" />

        <ImageButton
            android:id="@+id/aceptar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|left"
            android:background="@null"
            android:src="@drawable/aceptar" />

        <ImageButton
            android:id="@+id/cancelar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:background="@null"
            android:src="@drawable/cancelar" />

    </FrameLayout>

</android.support.wear.widget.BoxInsetLayout>